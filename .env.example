# === Настройки Parakeet API ===
# URL OpenAI-совместимого API (Parakeet, Whisper API, и др.)
PARAKEET_API_URL=http://localhost:5092/v1

# Модель для транскрипции
PARAKEET_MODEL=parakeet-tdt-0.6b-v3

# API ключ (опционально, для сервисов требующих авторизацию)
# PARAKEET_API_KEY=your-api-key-here

# === Настройки записи ===
# Частота дискретизации (Hz)
SAMPLE_RATE=16000

# === Опциональные настройки ===
# Язык распознавания (ru, en, auto)
LANGUAGE=auto

# Таймаут запроса к API (секунды)
API_TIMEOUT=120
